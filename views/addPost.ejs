<%- include('partials/header') -%>

    <div class="container section">
        <h1>Create new post</h1>
        <form action="/addPost" method="post">
            <div class="form-group">
                <label for="postTitle">Title:</label>
                <input type="text" class="form-control" autocomplete="off" name="postTitle">

            </div>
            <div class="form-group">
                <label for="postBody">Add text:</label>
                <textarea class="form-control" id="postBody" name='postBody' rows="5"></textarea>
            </div>
            <button class="btn btn-warning btn-block post-btn" type="submit">Create post</button>
        </form>

    </div>


    <%- include('partials/footer.ejs') -%>
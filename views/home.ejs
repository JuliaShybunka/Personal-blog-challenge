<%- include('partials/header.ejs');  -%>
    <h1>Home</h1>
    <p>
        <%= homeText %>
    </p>
    <div class="post">
        <% posts.forEach(post => { %>
            <h1 class="post-title">
                <%=post.title  %>
            </h1>

            <p class="post-body">

                <%=post.content.substring(0, 100) + " ..."  %>

                    <a href="/post/<%=post.title %>">Read More</a>
            </p>


            <%  }); %>
    </div>

    <%- include('partials/footer.ejs');  -%>